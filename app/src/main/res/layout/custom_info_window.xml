<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconInfo"
                android:src="@android:drawable/ic_dialog_alert" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/winTitle"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Hello"
                android:layout_toRightOf="@+id/iconInfo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/magnitude"
                android:text="12"
                android:layout_toRightOf="@+id/iconInfo"
                android:layout_below="@+id/winTitle" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/magnitude"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/magnitude"
                android:text="More Info.."
                android:id="@+id/moreInfoBtn"
                android:textColor="@color/colorAccent"
                android:background="@android:color/transparent" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>